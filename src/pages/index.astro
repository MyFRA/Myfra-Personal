---
import AppLayout from '../components/AppLayout'
import BlogContainerComponent from '../components/BlogContainerComponent'
import BlogListItemComponent from '../components/BlogListItemComponent'
import CardComponent from '../components/CardComponent'
import Layout from '../layouts/Layout.astro'
---

<div>
    <Layout title="MyFRA - Personal Site">
        <AppLayout>
            <div class="app-container">
                <CardComponent>
                    <div class="flex flex-col lg:flex-row justify-between gap-4 lg:gap-7 items-center pt-3 lg:pt-0">
                        <div class="flex-[1]">
                            <img src="/avatar.jpg" class="w-5/12 lg:w-full mx-auto rounded-full" alt="" />
                        </div>
                        <div class="flex-[6.5]">
                            <h1 class="text-xl lg:text-3xl font-semibold text-center lg:text-left">MyFRA</h1>
                            <p class="mt-1.5 text-sm lg:text-[15px] text-center lg:text-left">Hi, my name is Tomy Wibowo. I love programming and art</p>
                            <hr class="my-3" />
                            <ul class="flex gap-3">
                                <li class="flex-1 lg:flex-[unset]">
                                    <a
                                        href="https://www.linkedin.com/in/myfra/"
                                        target="_blank"
                                        class="flex border px-2 py-1 w-fit text-xs items-center gap-1 border-gray-300 hover:underline"
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="24"
                                            height="24"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            class="icon icon-tabler icons-tabler-outline w-5 icon-tabler-brand-linkedin"
                                        >
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"></path>
                                            <path d="M8 11l0 5"></path>
                                            <path d="M8 8l0 .01"></path>
                                            <path d="M12 16l0 -5"></path>
                                            <path d="M16 16v-3a2 2 0 0 0 -4 0"></path>
                                        </svg>
                                        Linkedin
                                    </a>
                                </li>
                                <li class="flex-1 lg:flex-[unset]">
                                    <a
                                        href="mailto:tomyntapss@gmail.com"
                                        target="_blank"
                                        class="flex border px-2 py-1 w-fit text-xs items-center gap-1 border-gray-300 hover:underline"
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="24"
                                            height="24"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            class="icon icon-tabler icons-tabler-outline w-5 icon-tabler-mail"
                                        >
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"></path>
                                            <path d="M3 7l9 6l9 -6"></path>
                                        </svg>
                                        Email
                                    </a>
                                </li>
                                <li class="flex-1 lg:flex-[unset]">
                                    <a
                                        href="https://github.com/MyFRA"
                                        target="_blank"
                                        class="flex border px-2 py-1 w-fit text-xs items-center gap-1 border-gray-300 hover:underline"
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="24"
                                            height="24"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            class="icon icon-tabler icons-tabler-outline w-5 icon-tabler-brand-github"
                                        >
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path
                                                d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
                                            ></path>
                                        </svg>
                                        Github
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <hr class="my-5" />

                    <div>
                        <div class="flex justify-between items-center mb-2">
                            <h1 class="font-semibold text-base lg:text-lg">Projects</h1>
                            <a href="" class="text-xs lg:text-sm hover:underline"> View All </a>
                        </div>
                        <ul>
                            <li>
                                <a href="https://github.com/MyFRA/Farah-Greeting-App" target="_blank" class="flex justify-between items-center hover:underline">
                                    <div>
                                        <h3 class="text-sm lg:text-base font-semibold">Farah Greeting App</h3>
                                        <p class="text-[15px] mt-0.5 hidden lg:block">
                                            An app or game with a birthday theme that I made specifically for a girl I like as a birthday gift
                                        </p>
                                    </div>
                                    <p class="text-sm lg:text-base font-semibold">2023</p>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <hr class="my-5" />

                    <div>
                        <div class="flex justify-between items-center">
                            <h1 class="font-semibold text-base lg:text-lg">Blogs</h1>
                            <a href="" class="text-sm hover:underline"> View All </a>
                        </div>
                        <BlogContainerComponent>
                            <BlogListItemComponent />
                        </BlogContainerComponent>
                    </div>
                </CardComponent>
            </div>
        </AppLayout>
    </Layout>
</div>
